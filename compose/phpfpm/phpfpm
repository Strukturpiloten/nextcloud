ARG PODMAN_PHPFPM_IMAGE
FROM ${PODMAN_PHPFPM_IMAGE}

ADD --chmod=0755 https://github.com/mlocati/docker-php-extension-installer/releases/latest/download/install-php-extensions /usr/local/bin/

RUN apk update && \
    apk upgrade && \
    apk add --no-cache \
    ca-certificates \
    ffmpeg \
    ffmpeg-libavcodec \
    supercronic \
    tzdata

RUN install-php-extensions \
    apcu \
    exif \
    gd \
    gmp \
    imagick \
    intl \
    pcntl \
    pdo_mysql \
    pdo_pgsql \
    pgsql \
    phar \
    redis \
    sodium \
    sysvsem \
    zip

RUN mv "${PHP_INI_DIR}/php.ini-production" "${PHP_INI_DIR}/php.ini"

ARG PODMAN_NEXTCLOUD_DATA_DIR_CONTAINER
RUN mkdir ${PODMAN_NEXTCLOUD_DATA_DIR_CONTAINER}
WORKDIR ${PODMAN_NEXTCLOUD_DATA_DIR_CONTAINER}

STOPSIGNAL SIGKILL
