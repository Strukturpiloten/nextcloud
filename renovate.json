{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _IMAGE variables in .env.example",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "\\w+_IMAGE=(?<depName>[^:\\s]+):(?<currentValue>[^\\s]+)"
      ]
    }
  ]
}